#include<iostream>
using namespace std;
int main()
{
    int a;
    cout<<"Enter a integer:"<<endl;
    cin>>a;

    float b;
    cout<<"Enter a float:"<<endl;
    cin>>b;
    
    double c;
    cout<<"Enter a double:"<<endl;
    cin>>c;

    char d;
    cout<<"Enter a character:"<<endl;
    cin>>d;

    cout<<endl<<"Size of int is: "<<endl;
    cout<<sizeof a<<endl;

    cout<<endl<<"Size of float is: "<<endl;
    cout<<sizeof b<<endl;

    cout<<endl<<"Size of double is: "<<endl;
    cout<<sizeof c<<endl;

    cout<<endl<<"Size of char is: "<<endl;
    cout<<sizeof d<<endl;
   
    return 0;
}
